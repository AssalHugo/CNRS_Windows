{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Modifier les groupes</h1>
        <br>
        <h5>Groupe principal :</h5>
        <p>{{groupePrincipal.nom}}</p>
        <br>
        <h5>Groupes secondaires :</h5>
        <ul class="list-group">
                    {% set i = 1 %}
                    {% for groupe in groupesSecondairesEmploye %}
                        <li class="list-group-item">
                            groupe {{i}} : <a class="btn btn-warning my-2" href="{{path('removeGroupeSecondaire', {id: groupe.id})}}" >&#128465;&#65039;</a>
                            </br>
                            <b>&nbsp;&nbsp;&nbsp;{{groupe.nom}}</b>
                        </li>
                        {% set i = i + 1 %}
                    {% endfor %}
                    <li class="list-group-item">
                        {{form(formGroupesSecondaires)}}
                    </li>
                </ul>
    </div>    
{% endblock %}
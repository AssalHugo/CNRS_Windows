{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <h2>Infos : </h2>
    <p>Utilisateurs : {{ nbEmployesAffiches }}/{{ nbEmployes }}</p>
    <p>Groupes : {{ nbGroupesAffiches }}/{{ nbGroupes }}</p>
    <p>Departements : {{ nbDepartementsAffiches }}/{{ nbDepartements }}</p>

    <h2>Filtre : </h2>
    {{ form(formFiltre) }}

    <h2>Trombinoscope : </h2>
    {% set i = 0 %}
    {% for employe in employes %}
        {% if i % 5 == 0 %}
            <div class="row">
        {% endif %}
        <div class="col-sm">
        <div class="card" style="width: 15rem;">
            <img class="card-img-top" src="{{ employe.photo }}" alt="{{ employe.nom }} image non trouvÃ©">
            <div class="card-body">
                <h5 class="card-title">{{ employe.nom }} {{ employe.prenom }}</h5>
                <p class="card-text">Statut :  <a href="?statut={{ employe.contrats| last .status.id }}">{{ employe.contrats| last .status.type }}</a></p>
                <p class="card-text">Groupes :
                    {% if employe.groupeprincipal %}
                        <a href="?groupe={{ employe.groupeprincipal.id }}">{{ employe.groupeprincipal.nom }}</a>
                    {% endif %}
                    {% for groupe in employe.groupessecondaires %}
                        {% if not loop.last - 1 %}, {% endif %}<a href="?groupe={{ groupe.id }}">{{ groupe.nom }}</a>
                    {% endfor %}
                </p>
            </div>
        </div>
        </div>
        {% if i % 5 == 4 %}
            </div>
        {% endif %}
        {% set i = i + 1 %}
    {% endfor %}
</div>
{% endblock %}
